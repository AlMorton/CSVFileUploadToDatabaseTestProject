@model CSVUploadToDataTestProject.Models.UploadFile.UploadFileFormModel
@{
    ViewData["Title"] = "Index";
}

<h2>File Upload</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" class="form" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">File</label>
                <input asp-for="File" type="file" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" name="UploadFile" value="Upload" class="btn btn-primary" />
            </div>

        </form>
    </div>   
</div>
<div>
    <h3>@Html.ActionLink("Click for Sample file", "DownloadSampleFile", "UploadFile")</h3>
</div>

